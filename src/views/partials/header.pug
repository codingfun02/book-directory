if messages.error
  div.message.message__error
    | #{messages.error}
    div.message__icon
      i.fas.fa-exclamation-triangle
else if messages.success
  div.message.message__success
    | #{messages.success}
    div.message__icon
      i.fas.fa-exclamation-circle
else if messages.info
  div.message.message__info
    | #{messages.info}
    div.message__icon
      i.fas.fa-exclamation-circle
nav
  ul
    li
      li
        a.nav__anchor(href="/")
          i(class="fas fa-book")
          h1.nav__title Book Directory
      if loggedIn
        div.nav__line
        li
          a.nav__anchor(href="/add")
            i(class="fas fa-plus-square")
      div.nav__line
      if loggedIn
        li
          a.nav__anchor.nav__user-btn(href="/logout") Log out
